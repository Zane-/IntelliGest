{
  "name": "IntelliGest",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
	  "videoCapture",
	  "storage",
	  "declarativeContent",
	  "activeTab",
	  "tabs",
	  "downloads"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
